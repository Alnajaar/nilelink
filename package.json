{
  "name": "nilelink-protocol-contracts",
  "version": "1.0.0",
  "description": "NileLink Protocol - Smart Contracts for Blockchain Settlement on Polygon",
  "workspaces": [
    "packages/*",
    "web/*"
  ],
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "deploy:local": "hardhat run scripts/deploy-local.js --network localhost",
    "deploy:mumbai": "hardhat run scripts/deploy-mumbai.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy-polygon.js --network polygon",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.8.1",
    "hardhat": "^2.19.1",
    "prisma": "^7.2.0",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@base-org/account": "^2.4.2",
    "@prisma/client": "^7.2.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/js-cookie": "^3.0.6",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "js-cookie": "^3.0.5",
    "nodemailer": "^7.0.12",
    "pino-pretty": "^13.1.3",
    "swr": "^2.3.8",
    "typechain": "^8.3.2"
  }
}
