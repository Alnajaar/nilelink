generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String      @id @default(uuid())
  firebaseUid           String?     @unique
  email                 String?     @unique
  walletAddress         String?     @unique // Traditional EOA wallet
  smartWallet           SmartWallet?
  role                  String      @default("USER")
  
  // Onboarding State Fields (MANDATORY)
  onboardingStatus      String      @default("pending") // "pending" | "completed"
  posDeployed           Boolean     @default(false)
  accountType           String      @default("merchant")
  merchantTier          String      @default("SMALL") // SMALL, MEDIUM, LARGE
  firstDashboardAccess  Boolean     @default(false)
  
  affiliate             Affiliate?
  referredBy            String?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  supplierProfile       SupplierProfile?
  assignedOrders        Order[]     @relation("DriverOrders")
  businesses            Business[]
}

model Affiliate {
  id               String    @id @default(uuid())
  user             User      @relation(fields: [userId], references: [id])
  userId           String    @unique
  referralCode     String    @unique
  tier             String    @default("BRONZE")
  commissionRate   Float     @default(0.10)
  totalEarnings    Float     @default(0)
  pendingEarnings  Float     @default(0)
  balance          Float     @default(0)
  referrals        Referral[]
  payouts          Payout[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Referral {
  id            String    @id @default(uuid())
  affiliate     Affiliate @relation(fields: [affiliateId], references: [id])
  affiliateId   String
  referredUserId String
  status        String    @default("PENDING") // PENDING, ACTIVE, COMPLETED
  totalCommission Float   @default(0)
  commissions   Commission[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Commission {
  id            String    @id @default(uuid())
  referral      Referral  @relation(fields: [referralId], references: [id])
  referralId    String
  amount        Float
  orderId       String?
  description   String?
  status        String    @default("PENDING") // PENDING, PAID, CANCELLED
  createdAt     DateTime  @default(now())
  paidAt        DateTime?
}

model Payout {
  id            String    @id @default(uuid())
  affiliate     Affiliate @relation(fields: [affiliateId], references: [id])
  affiliateId   String
  amount        Float
  status        String    @default("REQUESTED") // REQUESTED, PAID, REJECTED
  method        String
  details       String?
  requestedAt   DateTime  @default(now())
  processedAt   DateTime?
}

// Supplier & Product Ecosystem

model SupplierProfile {
  id              String    @id @default(uuid())
  user            User      @relation(fields: [userId], references: [id])
  userId          String    @unique
  companyName     String
  description     String?
  logoUrl         String?
  website         String?
  taxId           String?
  status          String    @default("PENDING") // PENDING, VERIFIED, SUSPENDED
  rating          Float     @default(0)
  products        Product[]
  orders          Order[]
  inventory       Inventory[]
  commissionRule  CommissionRule?
  b2bAccounts     B2BAccount[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model CommissionRule {
  id          String   @id @default(uuid())
  supplier    SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId  String   @unique
  type        String   @default("PERCENTAGE") // PERCENTAGE, FIXED
  value       Float    @default(0.0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model B2BAccount {
  id              String      @id @default(uuid())
  supplier        SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId      String
  merchantId      String      // Business ID of the buyer
  merchantName    String
  balance         Float       @default(0.0) // Debt owed to supplier
  creditLimit     Float       @default(0.0)
  riskLevel       String      @default("LOW") // LOW, MEDIUM, HIGH, CRITICAL
  status          String      @default("ACTIVE") // ACTIVE, SUSPENDED
  events          B2BEvent[]
  lastPaymentAt   DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@unique([supplierId, merchantId])
}

model B2BEvent {
  id              String      @id @default(uuid())
  account         B2BAccount  @relation(fields: [accountId], references: [id])
  accountId       String
  type            String      // ORDER_PLACED, PAYMENT_RECEIVED, DEBT_ADJUSTED, LIMIT_INCREASED
  amount          Float
  description     String?
  metadata        Json?
  timestamp       DateTime    @default(now())
}

model ProtocolAuditLog {
  id          String   @id @default(uuid())
  adminId     String
  action      String   // impersonation_start, impersonation_end, role_change, system_halt, commission_update
  targetId    String?  // The user or entity affected
  details     Json?
  timestamp   DateTime @default(now())
}

// ============================================
// GLOBAL PRODUCT CATALOG (Platform-Level)
// Shared across all supermarkets, reusable
// ============================================

model GlobalProduct {
  id            String         @id @default(uuid())
  barcode       String         @unique // EAN-13, UPC, etc. - PRIMARY KEY
  name          String
  brand         String?
  category      String
  size          String?        // "1L", "500g", etc.
  unit          String         @default("unit") // "kg", "liter", "unit"
  imageUrl      String?
  verified      Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Relations
  storeProducts StoreProduct[]
}

// ============================================
// STORE PRODUCT (Supermarket-Level)
// Links global products to local pricing/stock
// ============================================

model StoreProduct {
  id                String        @id @default(uuid())
  globalProduct     GlobalProduct @relation(fields: [globalProductId], references: [id])
  globalProductId   String
  business          Business      @relation(fields: [businessId], references: [id])
  businessId        String        // Links to Business (Restaurant/Supermarket)
  
  // Local pricing & stock
  price             Float
  cost              Float?        // Supplier cost
  stock             Int           @default(0)
  minStock          Int           @default(10)
  vat               Float         @default(0.15) // VAT/Tax rate
  
  // Branch/location (optional for multi-location stores)
  branchId          String?
  
  // Offline sync tracking
  lastSyncedAt      DateTime?
  pendingSync       Boolean       @default(false)
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@unique([globalProductId, businessId, branchId])
}

// ============================================
// OFFLINE SYNC QUEUE
// Tracks pending operations from offline POS
// ============================================

model OfflineSyncQueue {
  id            String   @id @default(uuid())
  businessId    String
  userId        String?  // Staff member who made the change
  operation     String   // "CREATE_PRODUCT", "UPDATE_STOCK", "UPDATE_PRICE", "CREATE_GLOBAL"
  entityType    String   // "GlobalProduct", "StoreProduct"
  entityId      String?  // ID of the affected entity (if exists)
  payload       Json     // Full data payload for the operation
  status        String   @default("pending") // "pending", "synced", "failed", "retrying"
  retryCount    Int      @default(0)
  maxRetries    Int      @default(3)
  error         String?  // Error message if failed
  createdAt     DateTime @default(now())
  syncedAt      DateTime?
  
  @@index([businessId, status])
}

model Product {
  id              String    @id @default(uuid())
  supplier        SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId      String
  name            String
  description     String?
  sku             String    @unique
  category        String
  price           Float
  cost            Float?
  currency        String    @default("USD")
  images          String[]
  tags            String[]
  isActive        Boolean   @default(true)
  inventory       Inventory?
  orderItems      OrderItem[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Inventory {
  id              String    @id @default(uuid())
  supplier        SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId      String
  product         Product   @relation(fields: [productId], references: [id])
  productId       String    @unique
  quantity        Int       @default(0)
  reserved        Int       @default(0)
  minStock        Int       @default(10)
  location        String?
  updatedAt       DateTime  @updatedAt
}

model Order {
  id              String    @id @default(uuid())
  supplier        SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId      String
  business        Business?     @relation(fields: [businessId], references: [id])
  businessId      String?       // Links to the merchant business
  customerId      String        // Potentially linked to a CustomerProfile in future
  status          String    @default("PENDING") // PENDING, PROCESSING, SHIPPED, DELIVERED, CANCELLED
  total           Float
  currency        String    @default("USD")
  items           OrderItem[]
  shippingAddress String?
  trackingNumber  String?
  assignedDriver  User?     @relation("DriverOrders", fields: [assignedDriverId], references: [id])
  assignedDriverId String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model OrderItem {
  id              String    @id @default(uuid())
  order           Order     @relation(fields: [orderId], references: [id])
  orderId         String
  product         Product   @relation(fields: [productId], references: [id])
  productId       String
  quantity        Int
  unitPrice       Float
  total           Float
}

// ============================================
// COMMISSION ENGINE - REVENUE SYSTEM
// ============================================

// Global default commission rules
model GlobalCommissionRule {
  id                    String    @id @default(uuid())
  businessType          String    // RESTAURANT, SUPERMARKET, COFFEE_SHOP, SUPPLIER
  orderCommissionPct    Float     @default(0.0) // Percentage from order subtotal
  deliveryCommissionPct Float     @default(0.0) // Percentage from delivery fee
  isActive              Boolean   @default(true)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@unique([businessType])
}

// Country/City specific commission rules
model LocationCommissionRule {
  id                    String    @id @default(uuid())
  country               String
  city                  String?   // Optional - can be country-wide
  zone                  String?   // Optional - specific zone/district
  businessType          String?   // Optional - override for specific business type
  orderCommissionPct    Float     @default(0.0)
  deliveryCommissionPct Float     @default(0.0)
  minimumDeliveryFee    Float?    // Optional dynamic minimum
  isActive              Boolean   @default(true)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@unique([country, city, zone, businessType])
}

// Merchant-specific commission overrides
model MerchantCommissionRule {
  id                    String    @id @default(uuid())
  businessId            String    @unique // Links to Business model
  orderCommissionPct    Float     @default(0.0)
  deliveryCommissionPct Float     @default(0.0)
  isZeroCommission      Boolean   @default(false) // Explicit zero commission flag
  justification         String?   // Required if isZeroCommission is true
  effectiveFrom         DateTime  @default(now())
  effectiveTo           DateTime? // NULL = permanent
  createdBy             String    // Admin ID
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

// Supplier commission tiers
model SupplierCommissionTier {
  id              String    @id @default(uuid())
  minVolume       Float     // Minimum monthly sales volume
  maxVolume       Float?    // Maximum volume (NULL = unlimited)
  commissionPct   Float     @default(0.0)
  description     String
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([minVolume, maxVolume])
}

// Supplier-specific commission overrides
model SupplierCommissionRule {
  id              String    @id @default(uuid())
  supplierId      String    @unique // Links to SupplierProfile
  commissionPct   Float     @default(0.0)
  tierId          String?   // Links to SupplierCommissionTier
  effectiveFrom   DateTime  @default(now())
  effectiveTo     DateTime? // NULL = permanent
  createdBy       String    // Admin ID
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Delivery pricing matrix
model DeliveryPricingRule {
  id              String    @id @default(uuid())
  country         String
  city            String?
  zone            String?
  minDistance     Float     // in kilometers
  maxDistance     Float     // in kilometers
  basePrice       Float
  pricePerKm      Float     @default(0.0)
  platformCutPct  Float     @default(0.0) // Platform percentage from delivery fee
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([country, city, zone])
}

// Order commissions tracking
model OrderCommission {
  id                    String    @id @default(uuid())
  orderId               String    @unique
  orderSubtotal         Float
  deliveryFee           Float
  orderCommissionPct    Float
  deliveryCommissionPct Float
  orderCommissionAmount Float
  deliveryCommissionAmount Float
  supplierCommissionPct Float?
  supplierCommissionAmount Float?
  platformRevenue       Float     // Total platform earnings
  status                String    @default("PENDING") // PENDING, CALCULATED, SETTLED, REVERSED
  calculatedAt          DateTime  @default(now())
  settledAt             DateTime?
  reversedAt            DateTime? // For refunds/cancellations
  reversalReason        String?
  
  @@index([status, calculatedAt])
}

// Wallet system
model Wallet {
  id              String    @id @default(uuid())
  ownerId         String    // User ID or Business ID
  ownerType       String    // USER, BUSINESS, SUPPLIER, PLATFORM
  currency        String    @default("USD")
  balance         Float     @default(0.0)
  pendingBalance  Float     @default(0.0) // For pending settlements
  lockedBalance   Float     @default(0.0) // For dispute resolution
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([ownerId, ownerType, currency])
  @@index([ownerType, currency])
}

// Wallet transactions
model WalletTransaction {
  id              String    @id @default(uuid())
  walletId        String
  type            String    // CREDIT, DEBIT
  amount          Float
  currency        String    @default("USD")
  description     String
  referenceType   String?   // ORDER, COMMISSION, SETTLEMENT, REFUND
  referenceId     String?   // Related entity ID
  status          String    @default("PENDING") // PENDING, COMPLETED, FAILED, REVERSED
  createdAt       DateTime  @default(now())
  completedAt     DateTime?
  reversedAt      DateTime?
  
  @@index([walletId, status, createdAt])
}

// Settlement schedules
model SettlementSchedule {
  id              String    @id @default(uuid())
  ownerId         String    // Business/Supplier ID
  ownerType       String    // BUSINESS, SUPPLIER
  frequency       String    // DAILY, WEEKLY, MANUAL
  nextSettlement  DateTime
  lastSettlement  DateTime?
  minimumAmount   Float     @default(0.0) // Minimum balance to trigger settlement
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([ownerId, ownerType])
}

// Settlement records
model Settlement {
  id              String    @id @default(uuid())
  ownerId         String
  ownerType       String
  amount          Float
  currency        String    @default("USD")
  periodStart     DateTime
  periodEnd       DateTime
  transactionIds  String[]  // Array of WalletTransaction IDs
  status          String    @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  method          String?   // BANK_TRANSFER, WALLET, CRYPTO, CASH
  reference       String?   // External reference number
  verificationCode String?  // 6-digit confirmation code
  createdAt       DateTime  @default(now())
  processedAt     DateTime?
  
  @@index([ownerId, ownerType, status])
}

// Financial audit logs
model FinancialAuditLog {
  id              String    @id @default(uuid())
  adminId         String
  action          String    // COMMISSION_UPDATE, PRICING_CHANGE, SETTLEMENT, REFUND
  entityType      String    // COMMISSION_RULE, DELIVERY_PRICING, WALLET, SETTLEMENT
  entityId        String
  oldValue        Json?
  newValue        Json?
  reason          String?   // Required for sensitive changes
  ipAddress       String?
  userAgent       String?
  timestamp       DateTime  @default(now())
  
  @@index([adminId, action, timestamp])
  @@index([entityType, entityId])
}

// Profit validation alerts
model ProfitAlert {
  id              String    @id @default(uuid())
  orderId         String?   // NULL for system-wide alerts
  alertType       String    // ZERO_PROFIT, NEGATIVE_PROFIT, COMMISSION_BYPASS
  severity        String    // CRITICAL, HIGH, MEDIUM
  message         String
  details         Json?
  resolved        Boolean   @default(false)
  resolvedBy      String?
  resolvedAt      DateTime?
  createdAt       DateTime  @default(now())
  
  @@index([alertType, severity, resolved])
}

// Business Profile Model
model Business {
  id                String    @id @default(uuid())
  ownerId           String    // Links to User ID
  name              String
  businessType      String    // restaurant, supermarket, cafe, etc.
  country           String
  city              String
  zone              String?
  phoneNumber       String
  location          String    // Coordinates or address
  status            String    @default("PENDING_ACTIVATION") // PENDING_ACTIVATION, ACTIVE, INACTIVE, SUSPENDED
  plan              String    @default("STARTER") // STARTER, BUSINESS, PREMIUM, ENTERPRISE
  subscriptionPlan  String?   // Alias for compatibility
  planExpiry        DateTime? // When current plan expires
  activationCode    String?   // License key for activation
  isActive          Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  user              User      @relation(fields: [ownerId], references: [id])
  products          StoreProduct[]
  orders            Order[]
  
  @@index([ownerId])
  @@index([businessType])
  @@index([status])
}
// ============================================
// INVISIBLE WEB3 - ACCOUNT ABSTRACTION (ERC-4337)
// ============================================

model SmartWallet {
  id              String      @id @default(uuid())
  user            User        @relation(fields: [userId], references: [id])
  userId          String      @unique
  address         String      @unique // The ERC-4337 Smart Contract Wallet address
  factoryAddress  String?     // The factory used to deploy the wallet
  paymasterStatus String      @default("ACTIVE") // ACTIVE, SUSPENDED, EXHAUSTED
  dailyGasSpentUsd6 Int       @default(0) // Quota tracking ($1 = 1,000,000)
  lastResetAt       DateTime  @default(now()) // Quota reset timestamp
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  transactions    OnChainTransaction[]
}

model OnChainTransaction {
  id              String      @id @default(uuid())
  smartWallet     SmartWallet @relation(fields: [smartWalletId], references: [id])
  smartWalletId   String
  txHash          String?     @unique
  userOpHash      String?     @unique // ERC-4337 UserOperation hash
  batchId         String?     // For transaction batching
  operation       String      // e.g., "CREATE_PRODUCT", "PROCESS_PAYMENT"
  status          String      @default("PENDING") // PENDING, SUCCESS, FAILED
  gasSponsored    Boolean     @default(true)
  gasCostUsd6     Int?        // Recorded cost in USD6 ($1 = 1,000,000)
  gasPolicy       GasPolicy?  @relation(fields: [gasPolicyId], references: [id])
  gasPolicyId     String?
  chainId         Int         @default(137)
  metadata        Json?       // Additional context for audit
  retryCount      Int         @default(0)
  nextAttemptAt   DateTime?   // For exponential backoff
  error           String?
  createdAt       DateTime    @default(now())
  completedAt     DateTime?
}

model GasPolicy {
  id              String    @id @default(uuid())
  name            String?   @unique // e.g., "SME Starter Policy"
  role            String?   // e.g., "MERCHANT", "SUPPLIER"
  merchantTier    String?   // e.g., "SMALL", "MEDIUM", "LARGE"
  businessType    String?   // e.g., "RESTAURANT", "RETAIL"
  description     String?
  dailyLimitUsd6  Int       @default(1000000) // Default $1.00/day
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  transactions    OnChainTransaction[]
}
