{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@/config/*": [
                "config/*"
            ],
            "@/services/*": [
                "services/*"
            ],
            "@/database/*": [
                "database/*"
            ],
            "@/models/*": [
                "models/*"
            ],
            "@/middleware/*": [
                "middleware/*"
            ],
            "@/utils/*": [
                "utils/*"
            ],
            "@/events/*": [
                "events/*"
            ],
            "@/api/*": [
                "api/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}