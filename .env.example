# ===========================================
# NileLink Smart Contract Deployment .env
# ===========================================
# IMPORTANT: Never commit this file to git!
# Copy to .env and fill in your values
# ===========================================

# Deployer Wallet
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Polygon RPC URLs
POLYGON_RPC_URL=https://polygon-rpc.com
AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Polygonscan API Key (for verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# ===========================================
# Production Environment Variables
# ===========================================
# These will be set after deployment

# Smart Contract Addresses (Polygon Mainnet/Amoy)
NEXT_PUBLIC_COMMISSION_CONTRACT=
NEXT_PUBLIC_POS_AUTH_CONTRACT=
NEXT_PUBLIC_CHAIN_ID=137

# IPFS Configuration
NEXT_PUBLIC_PINATA_JWT=
NEXT_PUBLIC_PINATA_API_KEY=
NEXT_PUBLIC_PINATA_SECRET_KEY=
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Firebase Configuration (Login/Register Only)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# The Graph Subgraph URL
NEXT_PUBLIC_SUBGRAPH_URL=

# AI Service (Optional - for server-side AI if needed)
# NEXT_PUBLIC_AI_SERVICE_URL=
