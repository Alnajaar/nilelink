# NileLink Environment Configuration
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/nilelink_dev?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Magic Link Authentication
MAGIC_SECRET_KEY=your-magic-secret-key

# Blockchain Configuration
# For development, you can use Polygon Mumbai testnet
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com

# Contract Addresses (fill with deployed contract addresses)
CONTRACT_RESTAURANT_REGISTRY=0x0000000000000000000000000000000000000000
CONTRACT_ORDER_SETTLEMENT=0x0000000000000000000000000000000000000000
CONTRACT_CURRENCY_EXCHANGE=0x0000000000000000000000000000000000000000
CONTRACT_DISPUTE_RESOLUTION=0x0000000000000000000000000000000000000000
CONTRACT_FRAUD_DETECTION=0x0000000000000000000000000000000000000000
CONTRACT_INVESTOR_VAULT=0x0000000000000000000000000000000000000000
CONTRACT_SUPPLIER_CREDIT=0x0000000000000000000000000000000000000000
CONTRACT_USDC=0x0000000000000000000000000000000000000000

# Encryption Keys (generate random 64-character hex strings)
EVENT_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
INTEGRITY_KEY=fedcba9876543210fedcba9876543210fedcba9876543210fedcba9876543210
DATA_ENCRYPTION_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Key Rotation (30 days in milliseconds)
KEY_ROTATION_INTERVAL=2592000000

# Email Service (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Backup RPC URL (fallback for blockchain connectivity)
BACKUP_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=your-openai-api-key

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Monitoring and Logging
LOG_LEVEL=info
APM_SERVICE_URL=http://localhost:8200
