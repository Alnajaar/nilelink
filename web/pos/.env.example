# NileLink POS Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application Environment
NODE_ENV=development
VITE_APP_ENV=development

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================

# Default Business ID (for development)
VITE_DEFAULT_BUSINESS_ID=demo_business

# Business Type (restaurant, retail, hospitality)
VITE_DEFAULT_BUSINESS_TYPE=retail

# ===========================================
# BLOCKCHAIN/WEB3 SETTINGS
# ===========================================

# Ethereum RPC URL
VITE_ETH_RPC_URL=https://polygon-amoy.infura.io/v3/YOUR_INFURA_KEY

# WalletConnect Project ID
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# NileLink Protocol Contract Addresses (Polygon Amoy Testnet)
VITE_NILELINK_PROTOCOL_ADDRESS=0x98Dc3Ae669ae676fA261C38951C5dC01dB4d5768
VITE_RESTAURANT_REGISTRY_ADDRESS=0x38D57dc538f4009452c3979a99256892EDa4dC9C
VITE_ORDER_SETTLEMENT_ADDRESS=0x719F8A5f9700657dA090abABdF1c9F740491CCb9
VITE_CURRENCY_EXCHANGE_ADDRESS=0x2B9649De5f9E3050cAc4494FA5c06027EA7f05f7
VITE_SUPPLIER_REGISTRY_ADDRESS=0x974612B35e3d67361C33C5faC96E0F499980F36f
VITE_DELIVERY_COORDINATOR_ADDRESS=0x496589A5E1b9f6A9550aDCaaa5164f0dc7F92814

# ===========================================
# HARDWARE SETTINGS
# ===========================================

# Enable Hardware Integration
VITE_ENABLE_HARDWARE=true

# Hardware Device IDs (for development)
VITE_SCANNER_DEVICE_ID=scanner_001
VITE_SCALE_DEVICE_ID=scale_001
VITE_PRINTER_DEVICE_ID=printer_001

# ===========================================
# AI SETTINGS
# ===========================================

# Enable AI Assistant
VITE_ENABLE_AI_ASSISTANT=true

# AI Memory Persistence
VITE_AI_MEMORY_PERSISTENCE=true

# ===========================================
# SYNC SETTINGS
# ===========================================

# Enable Offline Sync
VITE_ENABLE_OFFLINE_SYNC=true

# Sync Interval (milliseconds)
VITE_SYNC_INTERVAL=30000

# ===========================================
# COMPLIANCE SETTINGS
# ===========================================

# Default Country for Compliance
VITE_DEFAULT_COUNTRY=US

# Enable Compliance Features
VITE_ENABLE_COMPLIANCE=true

# ===========================================
# UI/UX SETTINGS
# ===========================================

# Enable Dark Mode by Default
VITE_DEFAULT_DARK_MODE=true

# Enable Haptic Feedback
VITE_ENABLE_HAPTIC_FEEDBACK=true

# Enable Sound Effects
VITE_ENABLE_SOUND_EFFECTS=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable Debug Logging
VITE_DEBUG_LOGGING=true

# Enable Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Mock Data Mode (for development)
VITE_USE_MOCK_DATA=true

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# Fleek Deployment
VITE_FLEEK_APP_ID=your_fleek_app_id

# IPFS Gateway
VITE_IPFS_GATEWAY=https://gateway.ipfscdn.io/ipfs/

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Session Timeout (minutes)
VITE_SESSION_TIMEOUT=480

# Enable Biometric Authentication
VITE_ENABLE_BIOMETRICS=false

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Enable Analytics
VITE_ENABLE_ANALYTICS=false

# Error Reporting
VITE_ERROR_REPORTING_ENDPOINT=https://your-error-reporting-endpoint.com