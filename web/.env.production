# NileLink Frontend API Configuration - Production

# API Base URLs (Update with production domain)
NEXT_PUBLIC_API_URL=https://api.nilelink.com/api
API_URL_INTERNAL=https://api.nilelink.com/api

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER=jwt
AUTH_TOKEN_STORAGE=localStorage

# Features
NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=true
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ERROR_REPORTING=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# External Services
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-...
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# Blockchain Configuration
NEXT_PUBLIC_POLYGON_RPC_URL=${NEXT_PUBLIC_POLYGON_RPC_URL}
NEXT_PUBLIC_AMOY_RPC_URL=${NEXT_PUBLIC_AMOY_RPC_URL}
NEXT_PUBLIC_BLOCKCHAIN_NETWORK=amoy
NEXT_PUBLIC_NILELINK_PROTOCOL=${NEXT_PUBLIC_NILELINK_PROTOCOL}
NEXT_PUBLIC_RESTAURANT_REGISTRY=${NEXT_PUBLIC_RESTAURANT_REGISTRY}
NEXT_PUBLIC_ORDER_SETTLEMENT=${NEXT_PUBLIC_ORDER_SETTLEMENT}
NEXT_PUBLIC_DELIVERY_COORDINATOR=${NEXT_PUBLIC_DELIVERY_COORDINATOR}
NEXT_PUBLIC_SUPPLY_CHAIN=${NEXT_PUBLIC_SUPPLY_CHAIN}
NEXT_PUBLIC_CURRENCY_EXCHANGE=${NEXT_PUBLIC_CURRENCY_EXCHANGE}
NEXT_PUBLIC_FRAUD_DETECTION=${NEXT_PUBLIC_FRAUD_DETECTION}

# Security
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_API_CALLS=false

# Timeouts
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_REQUEST_RETRY_ATTEMPTS=3

# Currency
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# Sentry Error Tracking
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
