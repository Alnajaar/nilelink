# NileLink Frontend API Configuration - Development

# API Base URLs
# Development (local backend)
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_URL_INTERNAL=http://localhost:3000/api

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER=jwt
AUTH_TOKEN_STORAGE=localStorage

# Features
NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=true
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ERROR_REPORTING=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# External Services (Optional for Development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_API_CALLS=true

# Timeouts
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_REQUEST_RETRY_ATTEMPTS=3

# Currency
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
